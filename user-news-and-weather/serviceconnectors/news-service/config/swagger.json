{
  "swagger": "2.0",
  "info": {
    "title": "news-service",
    "description": "An API to provide access to filtered news services.",
    "version": "1.0.0"
  },
  "host": "localhost:8081",
  "basePath": "/api",
  "schemes": [
    "http"
  ],
  "produces": [
    "application/json"
  ],
  "paths": {
    "/news/headlines": {
      "get": {
        "responses": {
          "200": {
            "description": "Success.",
            "schema": {
              "type": "array",
              "items": {
                "$ref": "#/definitions/schema.news-service_article"
              }
            }
          },
          "400": {
            "description": "Bad Request"
          },
          "401": {
            "description": "Authorization Required"
          },
          "500": {
            "description": "Server Error"
          }
        },
        "description": "Get the headlines filtered by country and category.",
        "operationId": "GetHeadlinesByCountry",
        "parameters": [
          {
            "in": "query",
            "name": "country",
            "type": "string"
          },
          {
            "in": "query",
            "name": "category",
            "type": "string"
          }
        ],
        "produces": [
          "application/json"
        ],
        "tags": [
          "news",
          "headlines"
        ]
      }
    }
  },
  "securityDefinitions": {
    "basicAuth": {
      "type": "basic",
      "description": "Require authorized access to API"
    }
  },
  "security": [
    {
      "basicAuth": []
    }
  ],
  "definitions": {
    "schema.news-service_article": {
      "type": "object",
      "description": "An article of news.",
      "properties": {
        "author": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "description": {
          "type": "string"
        },
        "url": {
          "type": "string",
          "format": "uri"
        },
        "urlToImage": {
          "type": "string"
        },
        "publishedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "additionalProperties": true
    }
  }
}