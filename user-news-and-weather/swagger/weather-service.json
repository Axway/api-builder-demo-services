{
	"swagger": "2.0",
	"info": {
		"title": "@axway/weather-service",
		"description": "An API to provide access to local weather information.",
		"version": "3.0.0"
	},
	"host": "localhost:8080",
	"basePath": "/api",
	"security": [
		{
			"basicAuth": []
		}
	],
	"paths": {
		"/weather/current": {
			"get": {
				"responses": {
					"200": {
						"description": "Success.",
						"schema": {
							"$ref": "#/definitions/schema.weather-service_weather"
						}
					},
					"400": {
						"description": "Bad Request"
					},
					"401": {
						"description": "Authorization Required"
					},
					"500": {
						"description": "Server Error"
					}
				},
				"description": "Get the current weather in the specified city.",
				"operationId": "GetCurrentWeatherByCity",
				"parameters": [
					{
						"in": "query",
						"name": "city",
						"type": "string",
						"description": "The city to query the weather for.",
						"required": true
					},
					{
						"in": "query",
						"name": "country",
						"type": "string",
						"description": "The country the city is in."
					},
					{
						"in": "query",
						"name": "units",
						"type": "string",
						"enum": [
							"metric",
							"imperial"
						],
						"description": "The units to use [metric|imperial]. Default: metric"
					},
					{
						"in": "header",
						"name": "x-request-id",
						"type": "string"
					},
					{
						"in": "header",
						"name": "x-b3-traceid",
						"type": "string"
					},
					{
						"in": "header",
						"name": "x-b3-spanid",
						"type": "string"
					},
					{
						"in": "header",
						"name": "x-b3-parentspanid",
						"type": "string"
					},
					{
						"in": "header",
						"name": "x-b3-sampled",
						"type": "string"
					},
					{
						"in": "header",
						"name": "x-b3-flags",
						"type": "string"
					},
					{
						"in": "header",
						"name": "x-ot-span-context",
						"type": "string"
					}
				],
				"produces": [
					"application/json"
				],
				"tags": [
					"weather"
				]
			}
		}
	},
	"securityDefinitions": {
		"basicAuth": {
			"type": "basic",
			"description": "Require authorized access to API"
		}
	},
	"schemes": [
		"http"
	],
	"definitions": {
		"schema.weather-service_weather": {
			"type": "object",
			"description": "A summary of the weather.",
			"properties": {
				"city": {
					"type": "string"
				},
				"country": {
					"type": "string"
				},
				"summary": {
					"type": "string"
				},
				"units": {
					"description": "The units to measure in.",
					"type": "string",
					"enum": [
						"metric",
						"imperial"
					]
				},
				"temperature": {
					"type": "number"
				},
				"windSpeed": {
					"type": "number"
				}
			}
		}
	}
}
